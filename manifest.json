{
	"name": "ChromePass",
	"description": "Access KeyPass database files locally or via URL.",
	"version": "0.0.1",

	"icons": {
		"128": "icon_128.png",
		"48": "icon_48.png"
	},

	"manifest_version": 2,
	"offline_enabled": true,

	"permissions": [
		"*://*/*",
		"clipboardWrite",
		"fileSystem"
	],

	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},

	"sandbox": {
		"pages": ["sandbox/index.html"]
	}
}